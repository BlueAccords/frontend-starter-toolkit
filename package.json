  "repository": "https://github.com/saranshkataria/frontend-starter-toolkit.git",
  "author": "saranshkataria <saransh@wisdomgeek.com>",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --env.mode development --hot",
    "prod": "webpack --env.mode production",
    "debug": "node --inspect-brk ./node_modules/webpack/bin/webpack.js",
    "prod:debug": "npm run debug -- --env.mode production",
    "dev:debug": "npm run debug -- --env.mode development",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "validate": "npm-run-all --parallel lint test"
  },
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "babel-loader": "^8.0.5",
    "envinfo": "^7.1.0",
    "fs-extra": "^7.0.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.2.5",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.5",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "@types/react-test-renderer": "^16.8.1",
    "babel-eslint": "11.0.0-beta.0",
    "eslint": "^5.15.1",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react-hot-loader": "^4.7.2",
    "react-test-renderer": "^16.8.4",
    "typescript": "^3.3.3333",
    "webpack-dev-server": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "bin": {
    "frontend-starter-toolkit": "./scripts/index.js"
  }
}
